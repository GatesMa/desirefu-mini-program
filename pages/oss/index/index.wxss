/* pages/normal/index/index.wxss */
page {
  display: flex;
  flex-direction: column;
}

.nav-tabs {
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
  z-index: 100;
}

.tab-list {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column-reverse;
  background: #fcfcfc;
  height: 10vh;
}

.tab-text {
  font-size: 2vh;
  line-height: 3vh;
  color: #5f5f5f;
}

.iconPath {
  width: 4vh;
  height: 4vh;
}

.tab-content {
  flex: 1;
}

.default {
  text-align: center;
  flex: 1;
  /* border-bottom: 1px solid #eee; */
  color: #eee;
  font-weight: bold;
}

.active {
  text-align: center;
  color: black;
  flex: 1;
  /* border-bottom: 1px solid red; */
  font-weight: bold;
}

.show {
  display: block;
  flex: 1;
}

.hidden {
  display: none;
  flex: 1;
}